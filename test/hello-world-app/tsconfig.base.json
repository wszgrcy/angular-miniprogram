{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "target": "es2015",
    "module": "es2020",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "angular-miniprogram": ["../../dist"],
      "angular-miniprogram/platform": ["../../dist/platform"],
      "angular-miniprogram/platform/type": ["../../dist/platform/type"],
      "angular-miniprogram/platform/wx": ["../../dist/platform/wx"],
      "angular-miniprogram/platform/default": ["../../dist/platform/default"],
      "angular-miniprogram/platform/zjtd": ["../../dist/platform/zjtd"],
      "angular-miniprogram/forms": ["../../dist/forms"],
      "angular-miniprogram/common": ["../../dist/common"],
      "angular-miniprogram/common/http": ["../../dist/common/http"],
      "angular-miniprogram/karma/test": ["../../src/builder/karma/client"]
    }
  }
}
